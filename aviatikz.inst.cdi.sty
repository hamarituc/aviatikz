% Kursskala
\newcommand{\aviainst@cdi@course}
{
  \begingroup

  \path [/avia/inst/cdi/course/background,even odd rule]
    (0, 0) circle (\avia@inst@cdi@courseoutrad)
    (0, 0) circle (\avia@inst@cdi@courseinrad);

  \foreach \i in {0,3,...,33}
  {
    \pgfmathsetmacro{\angle}{-10 * \i + 90}
    \pgfmathsetmacro{\anglelabel}{\angle - 90}
    \ifnum\i=0\def\courselabel{N}\else
    \ifnum\i=9\def\courselabel{E}\else
    \ifnum\i=18\def\courselabel{S}\else
    \ifnum\i=27\def\courselabel{W}\else
    \def\courselabel{\i}\fi\fi\fi\fi
    \node [/avia/inst/cdi/course/number] at (\angle:\avia@inst@cdi@coursenumrad) [rotate=\anglelabel] {\courselabel};
  }

  \foreach \i in {0,10,...,350}
  {
    \pgfmathsetmacro{\angle}{\i + 90}
    \pgfmathtruncatemacro{\modulo}{mod(\i, 30)}
    \ifnum\modulo=0
      \path [/avia/inst/cdi/course/maintick]
        (\angle:\avia@inst@cdi@courseinrad) -- (\angle:\avia@inst@cdi@coursemainrad);
    \else
      \path [/avia/inst/cdi/course/majortick]
        (\angle:\avia@inst@cdi@courseinrad) -- (\angle:\avia@inst@cdi@coursemajorrad);
    \fi
  }

  \foreach \i in {5,15,...,355}
  {
    \pgfmathsetmacro{\angle}{\i + 90}
    \path [/avia/inst/cdi/course/minortick]
      (\angle:\avia@inst@cdi@courseinrad) -- (\angle:\avia@inst@cdi@courseminorrad);
  }

  \endgroup
}

